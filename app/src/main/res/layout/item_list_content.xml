<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:paddingTop="20dp"
  android:layout_marginLeft="15dp"
  android:layout_marginRight="15dp"
  android:paddingBottom="20dp"
  android:background="@color/white"
  android:layout_marginTop="12dp"
  android:orientation="horizontal">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/list_item_icon"
    android:layout_centerVertical="true"
    android:layout_width="60dp"
    android:layout_height="60dp"
    app:civ_border_width="4dp"
    app:civ_border_color="@color/colorPrimary"
    android:src="@drawable/shop_background"
    android:layout_marginLeft="20dp" />

  <TextView
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_marginLeft="16dp"
    android:textSize="19sp"
    android:fontFamily="@font/lato"
    android:layout_toEndOf="@+id/list_item_icon" />

  <com.like.LikeButton
    app:icon_type="heart"
    app:icon_size="30dp"
    android:id="@+id/heart_button"
    app:like_drawable="@drawable/ic_heart_liked"
    app:unlike_drawable="@drawable/ic_heart_off"
    app:circle_start_color="@color/colorPrimary"
    app:circle_end_color="@color/colorPrimary"
    app:dots_primary_color="@color/colorPrimary"
    app:dots_secondary_color="@color/lightGrey"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignBottom="@+id/list_item_icon"
    android:layout_marginRight="-8dp"
    android:layout_centerVertical="true"
    android:layout_alignParentEnd="true"/>
</RelativeLayout>
